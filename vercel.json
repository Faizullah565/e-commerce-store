{
 "version": 2,
 "builds": [
  {
   "src": "app.js",
   "use": "@vercel/node",
   "config": { "includeFiles": ["dist/**"] }
  }
 ],
 "routes": [{
  "version": 2,
  "builds": [
    { "src": "client/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
    { "src": "server/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "source": "/api/(.*)", "destination": "server/index.js" },
    { "source": "/(.*)", "destination": "/client/build/$1" }
  ]
}
]
}