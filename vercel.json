{
  "version": 2,
  "builds": [
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "build" } },
    { "src": "backend/app.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "source": "/api/(.*)", "destination": "backend/app.js" },
    { "source": "/(.*)", "destination": "/frontend/build/$1" }
  ]
}